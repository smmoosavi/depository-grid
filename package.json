{
  "name": "depository-grid",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "pre-commit": "lint-staged && pnpm check && eslint . --max-warnings 0",
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "test": "pnpm run test:integration && pnpm run test:unit",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --plugin-search-dir . --check . && eslint . --max-warnings 0",
    "format": "prettier --plugin-search-dir . --write .",
    "test:integration": "playwright test",
    "test:unit": "vitest",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@playwright/test": "^1.28.1",
    "@storybook/addon-essentials": "^7.0.27",
    "@storybook/addon-interactions": "^7.0.27",
    "@storybook/addon-links": "^7.0.27",
    "@storybook/addon-svelte-csf": "^3.0.3",
    "@storybook/blocks": "^7.0.27",
    "@storybook/svelte": "^7.0.27",
    "@storybook/sveltekit": "^7.0.27",
    "@storybook/testing-library": "^0.0.14-next.2",
    "@sveltejs/adapter-auto": "^2.0.0",
    "@sveltejs/adapter-static": "^2.0.2",
    "@sveltejs/kit": "^1.20.4",
    "@tailwindcss/typography": "^0.5.9",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.4.14",
    "daisyui": "^3.2.1",
    "devalue": "^4.3.2",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-storybook": "^0.6.12",
    "eslint-plugin-svelte": "^2.30.0",
    "husky": "^8.0.3",
    "jest-leak-detector": "^29.6.1",
    "lint-staged": "^13.2.3",
    "postcss": "^8.4.26",
    "postcss-import": "^15.1.0",
    "prettier": "^2.0.0",
    "prettier-plugin-svelte": "^2.10.1",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.0.27",
    "svelte": "^4.0.5",
    "svelte-check": "^3.4.3",
    "tailwindcss": "^3.3.3",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^4.4.2",
    "vitest": "^0.33.0"
  },
  "type": "module",
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
